rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role in ['Administrator', 'President']);
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /applicants/{docId} {
      allow create: if request.auth != null && request.auth.token.role == 'BranchUser';
      allow read: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.token.role in ['Administrator','President'];
    }

    match /applicantExpenses/{docId} {
      allow create: if request.auth != null && request.auth.token.role == 'BranchUser';
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.role in ['Administrator','President'];
    }

    match /fundRequests/{docId} {
      allow create: if request.auth != null && request.auth.token.role == 'BranchUser';
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.token.role in ['HeadOfficeAccounting','Administrator','President'];
    }

    match /auditLogs/{docId} {
      allow read: if request.auth != null && request.auth.token.role in ['Administrator', 'President'];
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    match /{document=**} { allow read, write: if false; }
  }
}
